  <div class="grid socials">
    <Card href="https://github.com/ThinLiquid">
      <Icon name="simple-icons:github"/>
      <span>GitHub <small style={{ opacity: 0.75 }}>(github.com)</small></span>
    </Card>
    <Card href="https://osu.ppy.sh/users/ThinLiquid">
      <Icon name="simple-icons:osu"/>
      <span>osu! <small style={{ opacity: 0.75 }}>(osu.ppy.sh)</small></span>
    </Card>
    <Card href="https://bsky.app/profile/thinliquid.dev">
      <Icon name="simple-icons:bluesky"/>
      <span>Bluesky <small style={{ opacity: 0.75 }}>(bsky.social)</small></span>
    </Card>
    <Card href="https://x.com/ThinLiquid">
      <Icon name="simple-icons:x"/>
      <span>X <small style={{ opacity: 0.75 }}>(x.com)</small></span>
    </Card>
    <Card href="https://wetdry.world/@thnlqd">
      <Icon name="simple-icons:mastodon"/>
      <span>Mastodon <small style={{ opacity: 0.75 }}>(wetdry.world)</small></span>
    </Card>
    <Card href="https://discord.com/users/620492146406981642">
      <Icon name="simple-icons:discord"/>
      <span>Discord <small style={{ opacity: 0.75 }}>(discord.com)</small></span>
    </Card>
    <Card href="https://thinliquid.dev/pgp.asc">
      <Icon name="pixelarticons:lock" />
      <span>PGP Public Key</span>
