  <br/>
  <div style={{ display: 'flex', gap: '8px' }}>
    <ImageButton href="https://thinliquid.dev" url="/thnlqd-old.png" alt="thinliquid's button" />
    <textarea aria-label="click to copy" readonly onclick="this.select()">{createButtonString("https://thinliquid.dev/thnlqd-old.png", "thinliquid's button", "https://thinliquid.dev")}</textarea>
  </div>
  <br/>
  <div style={{ display: 'flex', gap: '8px' }}>
    <ImageButton href="https://thinliquid.dev" url="/thnlqd.png" alt="thinliquid's button" />
    <textarea aria-label="click to copy" readonly onclick="this.select()">{createButtonString("https://thinliquid.dev/thnlqd.png", "thinliquid's button", "https://thinliquid.dev")}</textarea>
