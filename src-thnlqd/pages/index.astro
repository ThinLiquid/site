  <h2>webrings</h2>
  <div id="nekowebring" style={{ color: 'var(--base)' }}>
    <script is:inline defer type="text/javascript" src="https://webring.nekoweb.org/onionring-variables.js"></script>
    <script is:inline defer type="text/javascript" src="https://webring.nekoweb.org/onionring-widget.js"></script>
  </div>
  <div id="palettewebring">
    <script is:inline defer type="text/javascript" src="https://palette.nekoweb.org/pmoring.js" data-type="catppuccin-mocha"></script>
  </div>
