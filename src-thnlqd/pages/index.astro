</Layout>
<style lang="scss" is:inline>
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 8px;
  }

  .socials .card {
      display: flex;
      align-items: center;
      gap: 8px;
    }

  .socials .card > span {
    line-height: 16px;
  }

  #nekowebring table {
    width: 100%;
    text-align: center;
  }
</style>
<style lang="scss">
  @keyframes up {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-15px) rotate(0deg) scale(0.9, 1.2); text-decoration-color: lightgreen; }
    100% { transform: translateY(0px); }
  }

	.name {
		display: inline-flex;
    
    @for $i from 1 through 10 {
      .letter:nth-child(#{$i}) {
        display: inline-block;
        animation: 2s up infinite ease-in-out;
        animation-delay: calc(#{$i} * 100ms);
        text-decoration: 2px solid underline var(--color-primary);
        text-underline-offset: 5px;
        transform-origin: center;
      }
    }

    .letter {
      transition: scale .5s var(--bounce), margin .25s var(--bounce);
      cursor: zoom-in;
      user-select: none;

      &:hover {
        scale: 1.2;
        margin: 0 3px;
      }

      &:active {
        scale: 0.95;
      }
    }
  }
</style>