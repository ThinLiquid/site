---
import Layout from "./Layout.astro";

const date = new Date(Astro.props.frontmatter.pubDate)
---
{/* @ts-ignore */}
<Layout title={`${Astro.props.frontmatter.title} | blog`} description={Astro.props.frontmatter.description} reactive={false}>
  <article>
    <h1>{Astro.props.frontmatter.title}</h1>
    <p>{Astro.props.frontmatter.description}</p>
    <small>
      <span>Published {new Date(Astro.props.frontmatter.pubDate).toLocaleDateString('en-GB')}</span>
    </small>
    <hr/>

    <slot/>
  </article>
</Layout>
