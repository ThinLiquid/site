---
interface Props {
  url: string
  href?: string
  alt: string
  [key: string]: any
}

const { url, href, alt, ...props } = Astro.props
---
<a href={href} {...props}>
  <img src={url} alt={alt} />
</a>
<style>
  a {
    padding: 0;
    margin: 0;
    border-radius: 0;

    img {
      width: 100%;
      margin: 0;
      padding: 0;
      border-radius: 0;
    }
  }
</style>