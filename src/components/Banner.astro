---
interface Props {
  href?: string;
  src: string;
  tooltip?: string;
}

const { href, src, tooltip } = Astro.props
---
<a href={href}>
  <img class="banner" src={src} width="850" height="150" data-tooltip={tooltip} alt={tooltip} />
</a>

<style>
  img, a {
    width: 100%;
    max-width: 100%;
  }

  img {
    height: auto;
  }

</style>