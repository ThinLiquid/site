---
import RootLayout from "../layouts/RootLayout.astro";
---

<RootLayout>
    <div class="centered">
        <div style="text-align:right;">
            <small>i don't even know what to put here anymore fml</small>
        </div>
        <h1 style="margin:0;">
            thinliquid's [studio]
        </h1>
        <a href="/home">âž¤ enter the [studio]</a>
    </div>

    <img src="/logo.png" class="logo" transition:name="logo" draggable="false">
</RootLayout>

<style>
  a {
    color: var(--color-primary);
  }

  .centered, .logo {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: max-content;
    max-width: 100%;
    padding: 32px;
    user-select: none;
  }

  .logo {
    opacity: 0.05;
    z-index: -1;
  }

  @keyframes open {
    from { height: 0; opacity: 0; }
    to { height: auto; opacity: 1; }
  }

  h1 { font-size: 64px; }
  small { color: var(--color-subtext-0)}
</style>
